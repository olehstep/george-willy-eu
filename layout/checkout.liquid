    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">
    <script src="https://cdn.intelligems.io/9ed69ae467d5.js"></script>

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
</head>
  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          {% if settings.cf09_imp %}
           {% render 'cf09-imp-mobile' %}
          {% endif %}
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
            {% if settings.cf09_imp %}
             {% render 'cf09-imp-desktop' %}
            {% endif %}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
  
        <!---- begin_checkout dataLayer push event for GA UA & GA4 ---->
    
    <script>
        
      var itemsArray = []
      var productsArray = []
      
    </script> 


    {% for product in checkout.line_items %}
    <script>

      var product = '{{ product.title }}'
      var price = '{{ product.original_price | money_without_currency | replace:',','.'}}'
      var quantity = '{{ product.quantity }}'
      var id = '{{ product.id }}'
      var brand = '{{ product.vendor }}'
      var variant = '{{ product.variant.title }}'

      var ecomObject = {

        'item_name': product,
        'item_id': id,
        'price': price,
        'item_variant': variant,
        'quantity': quantity,
        'item_brand': brand

      }

      var ecomObjectUniversal = {

        'name': product,
        'id': id,
        'price': price,
        'variant': variant,
        'quantity': quantity,
        'brand': brand

      }

      itemsArray.push(ecomObject)
      productsArray.push(ecomObjectUniversal)

      
      
    </script>
    {% endfor %}

      <script>

      var shippingAddress = '{{ checkout.shipping_address.summary }}'
      var shippingMethod = '{{ checkout.shipping_method.title }}'

      if(shippingAddress == ''){

        var checkoutStep = 1
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push(
          {
            'event': 'begin_checkout',
            'ecommerce': {
              'items': itemsArray
            }
          })
      }
      else if(shippingMethod == '' && shippingAddress !== ''){

        var checkoutStep = 2
        
      }
      else if(shippingMethod !== ''){

        var checkoutStep = 3
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push(
          {
            'event': 'add_payment_info',
            'ecommerce': {
              'shipping_tier': shippingMethod,
              'items': itemsArray
            }
          });

        
      }

    </script>

    <script>
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push(
          {
            'event': 'eec.checkout',
            'ecommerce': {
              'checkout': {

                'actionField': {

                  'step': checkoutStep
                  
                },

                'items': productsArray

                
              }
              
            }
          });
    </script>
    {% if settings.cf09_imp %}
     {% render 'cf09-imp' %}
    {% endif %}
  </body>
</html>
